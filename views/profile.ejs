<body>
    <nav class="navbar navbar-expand-lg"  style="background-color: rgb(155, 155, 155);">
        <div class="container-fluid">
          <a class="navbar-brand" href="/" style="color:black;">Home</a>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <% if(isUser) {%> 
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/Cart" style="color:black;" >Cart</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/Cart/Order" style="color:black;" >Order</a>
              </li>
              <% } else{%> 
              <li class="nav-item">
                <a class="nav-link" href="/login" style="color:black;">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="./Suinup" style="color:black;">Sign Up</a>
              </li>
             <% } %> 
             <% if(isAdmin){ %> 
              <li class="nav-item">
                <a class="nav-link" href="/Admin/Add-prodect" style="color:black;">Add Prodect</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/Cart/MangeOrder" style="color:black;">Mange Order</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/User" style="color:black;">Users</a>
              </li>
               <% } %> 
              <% if(isUser){ %> 
              <li class="nav-item">
                <a class="nav-link" href="/profile" style="color:black;">Profile</a>
              </li>
              <% } %> 

              <form class="d-flex" style="margin-left: 580px;">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-primary" type="submit">Search</button>
              </form>
              <% if(isUser){ %> 
              <form action="/logout" method="post" style="margin-left: 50px;"> 
                <input type="submit" value="Logout" class="btn btn-danger">
              </form>
              <% } %> 

            </ul>
           
            
          </div>
        </div>
      </nav>



      <h1 style="margin-top: 100px; margin-left: 120px;">Profile   ...... </h1>
      
      <p style="margin-left: 120px; font-size: 20px;">The Name : <%= profile.username  %> </p>
      <p style="margin-left: 120px; font-size: 20px;">The Email : <%= profile.email  %> </p>
      <p style="margin-left: 120px; font-size: 20px;">The Unfirsty : <%= profile.Unfirsty  %> </p>
      <p style="margin-left: 120px; font-size: 20px;">The Mobail :059 <%= profile.Phone  %> </p>
      <p style="margin-left: 120px; font-size: 20px;">The Addres : <%= profile.Addres  %> </p>
      <p style="margin-left: 120px; font-size: 20px;">The Age : <%= profile.Age  %> </p>

       
       <br>
       <h1 style="margin-left: 120px;">----------------------------------------</h1>
       <br>

       


      <form action="/profile" method="post">
        <label style="margin-left: 120px;">Update username : </label>
        <input type="text" name="username" id="" placeholder="enter username" style="border-radius: 5px; border-color: silver;">
        <label style="margin-left: 120px;">Update password : </label>
        <input type="password" name="password" id="" placeholder="enter password" style="border-radius: 5px; border-color: silver;">
        <input type="submit" name="" id="" style="margin-left: 110px; margin-bottom: 20px; width: 200px; border-radius: 4px; border-top-color: silver; border-left-color: silver;">
      </form>
      <br>

      <% for(e of errprofile){ %>
        <p style="background-color:rgb(252, 107, 107); margin-left: 110px; width:280px; border-radius: 4px;"><%= e %> </p>
        <% } %>  
    
</body>
</html>