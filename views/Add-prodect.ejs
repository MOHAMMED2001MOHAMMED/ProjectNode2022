    <div style="margin-top:200px;">
      <h4 style="margin-left: 120px; margin-bottom: 10px;">Add Prodect</h4>
        <form action="/Admin/Add-prodect" method="post" enctype="multipart/form-data"> 
            <input type="text" name="name" id="" placeholder="Enter Name Prodect" style="margin-left: 120px; margin-bottom: 10px;" size="80px">
            <br>
            <input type="text" name="type" id="" placeholder="Enter Name Type" style="margin-left: 120px; margin-bottom: 10px;" size="80px"> 
            <br>
            <input type="text" name="Description" id="" placeholder="Enter Description" style="margin-left: 120px; margin-bottom: 10px;" size="80px">
            <br>
            <input type="text" name="Category" id="" placeholder="Enter Category" style="margin-left: 120px; margin-bottom: 10px;" size="80px">
            <br>
            <input type="number" name="price" id="" placeholder="Enter Price Prodect" style="margin-left: 120px; margin-bottom: 10px; width: 630px;" size="80px">
            <br>
            <input type="file" name="imge" id="" style="margin-left: 120px; margin-bottom: 10px; " size="80px"> 
            <br>
            <input type="submit" value="Send" style="margin-left: 120px; margin-bottom: 10px; width: 630px;" size="80px">
        </form>


        <% for(let e of errProdect){ %>
          <p style="background-color:rgb(252, 107, 107); margin-left: 110px; width:280px; border-radius: 4px;"><%= e %> </p>
          <% } %>  

